{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "data": {
      "url": "processed_genre_data.csv"
    },
    "params": [
    {
      "name": "Genre_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Action",
          "Adventure",
          "Comedy",
          "Drama",
          "Fantasy",
          "Music",
          "Romance",
          "Sci-Fi",
          "Slice of Life",
          "Sports"

        ],
        "labels": [
          "Show All",
          "Action",
          "Adventure",
          "Comedy",
          "Drama",
          "Fantasy",
          "Music",
          "Romance",
          "Sci-Fi",
          "Slice of Life",
          "Sports"
        ],
        "name": "Genre : "
      }
    }
  ],
    "transform": [
        {
            "calculate": "datum.genre === '' ? 'Others' : datum.genre",
            "as": "AdjustedGenre"
        },
        {
            "filter": "datum.AdjustedGenre == 'Comedy' || datum.AdjustedGenre == 'Action'|| datum.AdjustedGenre == 'Fantasy' || datum.AdjustedGenre == 'Adventure'|| datum.AdjustedGenre == 'Romance'|| datum.AdjustedGenre == 'Slice of Life'|| datum.AdjustedGenre == 'Sports'|| datum.AdjustedGenre == 'Drama'|| datum.AdjustedGenre == 'Sci-Fi' || datum.AdjustedGenre == 'Music'"
        },
        {
            "filter": "datum.score > 0"
        },
        {
            "filter": "Genre_selection == null || datum.AdjustedGenre == Genre_selection"
        }
      ],



    "encoding": {
      "x": {
        "field": "popularity",
        "type": "quantitative",
        "title": "Popularity",
        "axis": {"tickCount": 8},
        "scale": {
            "domain":[0,16500]
        }
      },
      "y": {
        "field": "score",
        "type": "quantitative",
        "title": "Ratings Score",
        "axis": {"tickCount": 10},
        "scale": {
            "domain":[0,10]
        }
      },
      "color": {
        "field": "AdjustedGenre",
        "type": "nominal",
        "scale": {
          "domain": [
            "Action", "Adventure", "Comedy", "Drama", "Fantasy", 
            "Music", "Romance", "Sci-Fi", "Slice of Life", "Sports"
          ],
          "range": [
            "#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd", 
            "#8c564b", "#e377c2", "#7f7f7f", "#bcbd22", "#17becf"
          ]
        },
        "legend": {"title": "Genre"}
      }
    },
    "layer": [
      {
        "mark": "circle"

      },
      {
        "mark": {
          "type": "text",
          "align":"center",
          "baseline":"middle",
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "title", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['title'] == 'Shingeki no Kyojin' || datum['title'] == 'Fullmetal Alchemist: Brotherhood' || datum['title'] == 'Ai (ONA)' || datum['title'] == 'Wu Geng Ji 3rd Season'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "title", "type": "nominal", "title": "Anime"},
            {"field": "AdjustedGenre", "type": "nominal", "title": "Genre"},
            {"field": "ranked", "type": "nominal", "format": ",", "title": "Rank"},
            {"field": "popularity", "type": "quantitative", "format": ",", "title": "Popularity"},
            {"field": "score", "type": "quantitative", "format": ",", "title": "Ratings (out of 10)"}

          ]
        }
      }
    ]
  }