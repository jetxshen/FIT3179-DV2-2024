{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title": "Anime Ranks against Popularity",
    "data": {
      "url": "processed_genre_data.csv"
    },
    "transform": [
        {
            "calculate": "datum.genre === '' ? 'Others' : datum.genre",
            "as": "AdjustedGenre"
        },
        {
            "filter": "datum.score > 0"
        }
      ],



    "encoding": {
      "x": {
        "field": "popularity",
        "type": "quantitative",
        "title": "Popularity",
        "axis": {"tickCount": 8}
      },
      "y": {
        "field": "score",
        "type": "quantitative",
        "title": "Score",
        "axis": {"tickCount": 10}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "transform": [
        {
            "calculate": "datum.Continent === 'North America' ? 'Shonen' : datum.Continent === 'South America' ? 'Isekai' : datum.Continent === 'Europe' ? 'Slice of Life' : datum.Continent === 'Africa' ? 'Fantasy' : datum.Continent === 'Asia' ? 'Comedy' : 'Romance'",
            "as": "CustomContinent"
          }
        ],
        "encoding": {

          "color": {
            "field": "CustomContinent",
            "type": "nominal",
            "scale": {
              "domain": [
                "Shonen",
                "Isekai",
                "Slice of Life",
                "Fantasy",
                "Comedy",
                "Romance"
              ],

              "range": 
              [
              "#2ca02c",  
              "#d62728",  
              "#1f77b4", 
              "#9467bd",  
              "#ff7f0e",  
              "#8c564b"   
              ]
          }

              ,
              "legend" : {
                  "title": "Genre"
              }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "popularity", "type": "quantitative", "format": ",", "title": "Popularity"},
            {"field": "score", "type": "quantitative", "format": ",", "title": "Score (out of 10)"}

          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'Naruto' || datum['Country'] == 'Shingeki no Kyojin' || datum['Country'] == 'Redo of Healer' || datum['Country'] == 'Yosuga no Sora' || datum['Country'] == 'Jujutsu Kaisen' || datum['Country'] == 'Your Name'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "popularity", "type": "quantitative", "format": ",", "title": "Popularity"},
            {"field": "score", "type": "quantitative", "format": ",", "title": "Score (out of 10)"}

          ]
        }
      }
    ]
  }