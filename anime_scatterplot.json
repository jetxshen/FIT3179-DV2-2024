{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title": "Anime Ratings",
    "data": {
      "url": "studio codes (week 9)/4_interactive_scatter_plot/data/COVID_19_10_Oct_2020.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,

            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "Shonen",
            "Isekai",
            "Slice of Life",
            "Fantasy",
            "Comedy",
            "Romance"
          ],
          "name": "Genre : "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Active > 0"},
      {"filter": "datum.Deaths > 0"},
      {"filter": "datum.Population > Population_Above"},
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      },
      {
        "calculate": "datum.Confirmed/datum.Population * 10000",
        "as": "Cases per 10,000 Population"
      }
    ],
    "encoding": {
      "x": {
        "field": "Confirmed",
        "type": "quantitative",
        "title": "Rank",
        "axis": {"tickCount": 7},
        "scale": {"type": "log", "domain": [1, 10000000]}
      },
      "y": {
        "field": "Deaths",
        "type": "quantitative",
        "title": "Score",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [1, 1000000]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "transform": [
        {
            "calculate": "datum.Continent === 'North America' ? 'Shonen' : datum.Continent === 'South America' ? 'Isekai' : datum.Continent === 'Europe' ? 'Slice of Life' : datum.Continent === 'Africa' ? 'Fantasy' : datum.Continent === 'Asia' ? 'Comedy' : 'Romance'",
            "as": "CustomContinent"
          }
        ],
        "encoding": {

          "color": {
            "field": "CustomContinent",
            "type": "nominal",
            "scale": {
              "domain": [
                "Shonen",
                "Isekai",
                "Slice of Life",
                "Fantasy",
                "Comedy",
                "Romance"
              ],

              "range": 
              [
              "#2ca02c",  
              "#d62728",  
              "#1f77b4", 
              "#9467bd",  
              "#ff7f0e",  
              "#8c564b"   
              ]
          }

              ,
              "legend" : {
                  "title": "Genre"
              }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Confirmed", "type": "quantitative", "format": ",", "title": "Rank"},
            {"field": "Deaths", "type": "quantitative", "format": ",", "title": "Score"}

          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'Naruto' || datum['Country'] == 'Shingeki no Kyojin' || datum['Country'] == 'Redo of Healer' || datum['Country'] == 'Yosuga no Sora' || datum['Country'] == 'Jujutsu Kaisen' || datum['Country'] == 'Your Name'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Confirmed", "type": "quantitative", "format": ",", "title": "Rank"},
            {"field": "Deaths", "type": "quantitative", "format": ","}

          ]
        }
      }
    ]
  }